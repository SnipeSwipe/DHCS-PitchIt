<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".profileDetails"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/scrollView"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Basic Info"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/basicInfoTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Name"
                android:textSize="15dp"
                android:id="@+id/nameTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/basicInfoTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pooja Gupta"
                android:textSize="15dp"
                android:id="@+id/nameDisplayTV"
                android:layout_below="@+id/basicInfoTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Age"
                android:textSize="15dp"
                android:id="@+id/ageTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/nameTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="15dp"
                android:id="@+id/ageDisplayTV"
                android:layout_below="@+id/nameDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Gender"
                android:textSize="15dp"
                android:id="@+id/genderTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/ageTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="15dp"
                android:id="@+id/genderDisplayTV"
                android:layout_below="@+id/ageDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Height"
                android:textSize="15dp"
                android:id="@+id/heightTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/genderTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="172cm"
                android:textSize="15dp"
                android:id="@+id/heightDisplayTV"
                android:layout_below="@+id/genderDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Weight"
                android:textSize="15dp"
                android:id="@+id/weightTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/heightTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55kg"
                android:textSize="15dp"
                android:id="@+id/weightDisplayTV"
                android:layout_below="@+id/heightDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_below="@id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Professional Details"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/professionalDetailsTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Sport"
                android:textSize="15dp"
                android:id="@+id/sportTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/professionalDetailsTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Football"
                android:textSize="15dp"
                android:id="@+id/sportDisplayTV"
                android:layout_below="@+id/professionalDetailsTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Education"
                android:textSize="15dp"
                android:id="@+id/educationTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/sportTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.A."
                android:textSize="15dp"
                android:id="@+id/educationDisplayTV"
                android:layout_below="@+id/sportDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Leagues"
                android:textSize="15dp"
                android:id="@+id/leaguesTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/educationTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zonal"
                android:textSize="15dp"
                android:id="@+id/leaguesDisplayTV"
                android:layout_below="@+id/educationDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_below="@id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Contact Information"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/contactInfoTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Email-ID"
                android:textSize="15dp"
                android:id="@+id/emailIdTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/contactInfoTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pooh@gmail.com"
                android:textSize="15dp"
                android:id="@+id/emailIdDisplayTV"
                android:layout_below="@+id/contactInfoTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Phone number"
                android:textSize="15dp"
                android:id="@+id/phoneNumberTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/emailIdTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999888527"
                android:textSize="15dp"
                android:id="@+id/phoneNumberDisplayTV"
                android:layout_below="@+id/emailIdDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp" />


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
