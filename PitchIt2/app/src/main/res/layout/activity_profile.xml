<RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfileSomeoneElse"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <TableRow
            android:id="@+id/details"
            android:onClick="rowClick"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_column="0"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/profile_photo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Olivier Giroud"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/name"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Football"
                    android:layout_below="@id/name"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/sports"
                    />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="108dp"
                    android:layout_below="@id/profile_photo"
                    android:background="@drawable/new_message"
                    android:id="@+id/message"
                    android:onClick="chatStart" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/profile_photo"
                    android:layout_toRightOf="@id/message"
                    android:background="@drawable/round_button"
                    android:id="@+id/follow"
                    android:text="Follow"
                    android:onClick="profClick" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ribbon"
                    android:layout_alignTop="@+id/name"
                    android:layout_alignLeft="@+id/Following"
                    android:layout_alignStart="@+id/Following" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="31"
                    android:textStyle="bold"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/age" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="AGE"
                    android:id="@+id/Age"
                    android:layout_below="@+id/age"
                    android:layout_alignLeft="@+id/age"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="190"
                    android:textStyle="bold"
                    android:layout_below="@+id/Age"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/height" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="HEIGHT"
                    android:id="@+id/Height"
                    android:layout_below="@+id/height"
                    android:layout_alignLeft="@+id/age"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="82 kg"
                    android:textStyle="bold"
                    android:layout_below="@+id/Height"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/weight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="WEIGHT"
                    android:id="@+id/Weight"
                    android:layout_below="@+id/weight"
                    android:layout_alignLeft="@+id/age"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="40"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="35dp"
                    android:id="@+id/following" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="FOLLOWING"
                    android:id="@+id/Following"
                    android:layout_below="@+id/following"
                    android:layout_alignRight="@+id/following"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="55602"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/Following"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="35dp"
                    android:id="@+id/followers" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="FOLLOWERS"
                    android:id="@+id/Followers"
                    android:layout_below="@+id/followers"
                    android:layout_alignRight="@+id/followers"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="4"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/Followers"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="35dp"
                    android:id="@+id/rating" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="RATING"
                    android:id="@+id/Rating"
                    android:layout_below="@+id/rating"
                    android:layout_alignRight="@+id/rating"/>

            </RelativeLayout>

        </TableRow>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="rowClick"
            android:id="@+id/achievements_row" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Achievements"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:id="@+id/Achievements" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text=">"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:id="@+id/achievements_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Played for Arsenal FC\nScout for Young India FA"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/Achievements"
                android:id="@+id/achievements" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/photos_row"
            android:onClick="photoClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Photos"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:id="@+id/Photos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text=">"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:id="@+id/photos_arrow" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_below="@id/Photos"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/photo1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/photo2"
                    android:padding="5dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/photo3"
                    android:padding="5dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/photo4"
                    android:padding="5dp"
                    />

            </TableRow>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/videos_row"
            android:onClick="videoClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Videos"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:id="@+id/Videos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text=">"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:id="@+id/videos_arrow" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_below="@id/Videos"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/video1"
                    android:padding="5dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/video2"
                    android:padding="5dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/video3"
                    android:padding="5dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/video4" />

            </TableRow>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
