<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditProfile"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/scrollView"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#ffffff"
        >


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#efefef"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Basic Info"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/basicInfoTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Name"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/nameTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/basicInfoTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/nameDisplayTV"
                android:layout_below="@+id/basicInfoTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_toRightOf="@+id/genderTV"
                android:layout_toEndOf="@+id/genderTV"
                android:text="Aman Agarwal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Age"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/ageTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/nameTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/ageDisplayTV"
                android:layout_below="@+id/nameDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_alignLeft="@+id/nameDisplayTV"
                android:layout_alignStart="@+id/nameDisplayTV"
                android:text="20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Gender"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/genderTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/ageTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/genderDisplayTV"
                android:layout_below="@+id/ageDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_alignLeft="@+id/ageDisplayTV"
                android:layout_alignStart="@+id/ageDisplayTV"
                android:text="Male" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Height"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/heightTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/genderTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/heightDisplayTV"
                android:layout_below="@+id/genderDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_alignLeft="@+id/genderDisplayTV"
                android:layout_alignStart="@+id/genderDisplayTV"
                android:text="185" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Weight"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/weightTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/heightTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/weightDisplayTV"
                android:layout_below="@+id/heightDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_alignLeft="@+id/heightDisplayTV"
                android:layout_alignStart="@+id/heightDisplayTV"
                android:text="76" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_below="@id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#efefef"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Professional Details"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/professionalDetailsTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Sport"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/sportTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/professionalDetailsTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/sportDisplayTV"
                android:layout_below="@+id/professionalDetailsTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_toRightOf="@+id/educationTV"
                android:layout_toEndOf="@+id/educationTV"
                android:text="Football" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Education"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/educationTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/sportTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/educationDisplayTV"
                android:layout_below="@+id/sportDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_toRightOf="@+id/educationTV"
                android:layout_toEndOf="@+id/educationTV"
                android:text="12th CBSE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Leagues"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/leaguesTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/educationTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/leaguesDisplayTV"
                android:layout_below="@+id/educationDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_alignLeft="@+id/educationDisplayTV"
                android:layout_alignStart="@+id/educationDisplayTV"
                android:text="Chilla FC League" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_below="@id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#efefef"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Contact Information"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/contactInfoTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Email-ID"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/emailIdTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/contactInfoTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/emailIdDisplayTV"
                android:layout_below="@+id/contactInfoTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_toRightOf="@+id/phoneNumberTV"
                android:layout_toEndOf="@+id/phoneNumberTV"
                android:text="agarwal_a@live.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Phone number"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/phoneNumberTV"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/emailIdTV"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/phoneNumberDisplayTV"
                android:layout_below="@+id/emailIdDisplayTV"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_alignLeft="@+id/emailIdDisplayTV"
                android:layout_alignStart="@+id/emailIdDisplayTV"
                android:text="9810869166" />



        </RelativeLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/relativeLayout3"
            android:layout_marginTop="25dp"
            android:text="Save Changes"
            android:id="@+id/save"
            android:background="@drawable/round_button"
            android:onClick="startApp" />

    </RelativeLayout>

</ScrollView>
