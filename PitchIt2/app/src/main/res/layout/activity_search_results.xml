<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SearchResults"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/scrollView"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout3">

            <TableRow
                android:id="@+id/row1"
                android:onClick="rowClick"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_column="0"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="profStart"
                    android:background="#efefef">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/image1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Olivier Giroud"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="95dp"
                        android:id="@+id/name1"
                        />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_toRightOf="@id/name1"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="60dp"
                        android:id="@+id/ribbon1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@id/image1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Sport: "
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/Sport1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@+id/Sport1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Football"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/sport1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@+id/sport1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Age: "
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="45dp"
                        android:id="@+id/Age1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@id/Age1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="31"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/age1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sport1"
                        android:layout_toRightOf="@+id/image1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Location: "
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/Location1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sport1"
                        android:layout_toRightOf="@id/Location1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Delhi"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/location1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sport1"
                        android:layout_toRightOf="@id/location1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rating: "
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:id="@+id/Rating1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sport1"
                        android:layout_toRightOf="@+id/Rating1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="4"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/rating1"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/row1"
                android:onClick="rowClick"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_column="0"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="rowClick"
                    android:background="#efefef"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/image2"
                        android:layout_alignBottom="@+id/Location1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Kalika Parnaik"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="95dp"
                        android:id="@+id/name1"
                        />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_toRightOf="@id/name1"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="60dp"
                        android:id="@+id/ribbon1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@id/image2"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Sport: "
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/Sport1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@+id/Sport1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="BasketBall"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/sport1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@+id/sport1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Age: "
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="45dp"
                        android:id="@+id/Age1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_toRightOf="@id/Age1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="12"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/age1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sport1"
                        android:layout_toRightOf="@+id/image2"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Location: "
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/Location1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sport1"
                        android:layout_toRightOf="@id/Location1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Maharashtra"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/location1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sport1"
                        android:layout_toRightOf="@id/location1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rating: "
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:id="@+id/Rating1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Sport1"
                        android:layout_toRightOf="@+id/Rating1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="2"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/rating1"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </TableRow>


        </LinearLayout>

    </RelativeLayout>
</ScrollView>
