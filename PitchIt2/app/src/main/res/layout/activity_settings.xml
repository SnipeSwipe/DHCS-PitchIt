<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.snipeswipe.pitchit2.Settings">

    <ScrollView

        android:id="@+id/scrollView"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <TableRow
                    android:id="@+id/row1"
                    android:onClick="rowClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/bullet1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Privacy Settings"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="60dp"
                            android:id="@+id/setting1"
                            />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/row2"
                    android:onClick="rowClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/bullet2"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Notification Settings"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="60dp"
                            android:id="@+id/setting2"
                            />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/row3"
                    android:onClick="rowClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/bullet3"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Change Password"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="60dp"
                            android:id="@+id/setting3"
                            />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/row4"
                    android:onClick="rowClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/bullet4"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Help Center"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="60dp"
                            android:id="@+id/setting4"
                            />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/row5"
                    android:onClick="rowClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/bullet5"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Report a Problem"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="60dp"
                            android:id="@+id/setting5"
                            />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/row6"
                    android:onClick="rowClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/bullet6"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Logout"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="60dp"
                            android:id="@+id/setting6"
                            />

                    </RelativeLayout>
                </TableRow>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
